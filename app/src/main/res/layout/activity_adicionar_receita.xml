<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".AdicionarReceitaActivity">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="-20dp"
    android:padding="20dp"
    app:cardCornerRadius="28dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp">

        <!--Titulo-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Adicionar nova Receita"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <!--Descricao-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:text="Descricao:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_add_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adicione uma descrição"
            android:inputType="text" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <!--Categoria-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:text="Categoria:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_categoria"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />


        <!--Valor-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:text="Valor:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_add_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adicione um valor"
            android:inputType="number|numberDecimal" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <!--Data-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_mostrar_calendario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/calendario_icon" />

            <TextView
                android:id="@+id/text_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:alpha="0.7"
                android:text="Escolha uma data"
                android:textSize="16sp" />

        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <!--Tipo da transacao-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:text="Tipo da transação:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receita"
            android:checked="true"
            android:alpha="0.7"
            android:textSize="16dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="80dp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp">

        <Button
            android:id="@+id/btn_adicionar_transacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="ADICIONAR" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>

</RelativeLayout>